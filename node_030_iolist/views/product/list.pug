extends ../layout

block content
    link(rel="stylesheet", href="/css/products.css")
    script(src="/js/product.js")
    table.products
        tr
            th 상품코드
            th 상품이름
            th 품목
            th 규격
            th 매입단가
            th 매출단가
        each item in PRODUCTS
            tr(data-pcode=`${item.p_code}`)
                td= item.p_code 
                td= item.p_name 
                td= item.p_item
                td= item.p_std
                td= item.p_iprice 
                td= item.p_oprice
    div.products.btn_box
        input(placeholder="상품코드")  
        a(href="#" ) 조회 
    div.products.btn_box2
        a(href="/products/insert" ) 상품추가 